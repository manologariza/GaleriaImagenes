<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondosplashscreen"
    tools:context="com.example.dell.galeriaimagenes.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GalerÃ­a Acuarella: carrusel de obras"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff000011">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrevio"
            android:text="Previo"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSiguiente"
            android:text="Siguiente"
            android:layout_weight="1"/>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgvCuadro"
        android:paddingTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/boti"/>

    <TextView
        android:id="@+id/tvDescripcionCuadro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Boticelli: 'El nacimiento de la Primavera'"/>


</LinearLayout>
